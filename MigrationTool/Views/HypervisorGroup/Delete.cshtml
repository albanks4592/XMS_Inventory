@using MigrationTool.ViewModels
@model HypervisorGroupDetailsViewModel

@{
    ViewBag.Title = MigrationTool.Strings.DeleteAction;
}

<!-- Header and breadcrumbs -->
@Html.Partial("_Breadcrumb", new Breadcrumb(ViewBag.Title, new BreadcrumbItem { LinkText = MigrationTool.Strings.HypervisorGroupPlural, ControllerName = "HypervisorGroup" }))

<h2>@ViewBag.Title</h2>

<h3>@string.Format(MigrationTool.Strings.ConfirmDeletion_P0, MigrationTool.Strings.HypervisorGroupPlural)</h3>

@Html.Partial("_Details", Model)

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink(MigrationTool.Strings.Cancel, "Details", new { Id = Model.Id }, new { @class = "btn btn-default" })
}