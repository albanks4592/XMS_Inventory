@model PublishedApplicationDetailslViewModel
@using MigrationTool.ViewModels

@if (Model.ApplicationVersion != null)
{
    <div class="col-md-6">
        <dl>
            <dt>@Html.DisplayNameFor(model => Model.ApplicationVersion.Application)</dt>
            <dd>@Html.DisplayFor(model => Model.ApplicationVersion.Application)</dd>

            <dt>@Html.DisplayNameFor(model => Model.ApplicationVersion)</dt>
            <dd>@Html.DisplayFor(model => Model.ApplicationVersion)</dd>
        </dl>
    </div>
    
    if (User.IsInRole(MigrationTool.Roles.Edit) || User.IsInRole(MigrationTool.Roles.Admin))
    {
        <div class="col-md-6 text-center">
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#removeConfirm">Remove Link</button>
        </div>
    }
}
else
{
    <div class="col-md-6">
        <h3>None</h3>
    </div>
    
    if (User.IsInRole(MigrationTool.Roles.Edit) || User.IsInRole(MigrationTool.Roles.Admin))
    {
        <div class="col-md-6 text-center">
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addDialog">Link Application Version</button>
        </div>
    }
}