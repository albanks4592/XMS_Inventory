@{
    MigrationTool.Models.User currentUser = MigrationTool.Models.User.GetUserForUsername(User.Identity.Name);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - XenApp Migration Tool</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/select2css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle Navication</span> <span class="icon-bar"></span><span
                        class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                @Html.ActionLink("XMS", "Index", "Home", null, new {@class="navbar-brand"})
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" id="inventory" role="button" href="#" data-toggle="dropdown">Inventory <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Farms", "Index", "Farm")</li>
                            <li>@Html.ActionLink("XenApp Farm Versions", "Index", "XenAppFarmVersion")</li>
                            <li>@Html.ActionLink("Servers", "Index", "Server")</li>
                            <li>@Html.ActionLink("Published Applications", "Index", "PublishedApplication")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Active Directory Groups", "Index", "ActiveDirectoryGroup")</li>
                            <li>@Html.ActionLink("Entitled Users", "Index", "EntitledUser")</li>
                            <li>@Html.ActionLink("Divisions", "Index", "Division")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Hypervisors", "Index", "Hypervisor")</li>
                            <li>@Html.ActionLink("Hypervisor Groups", "Index", "HypervisorGroup")</li>
                            <li>@Html.ActionLink("Hypervisor Types", "Index", "HypervisorType")</li>
                            <li>@Html.ActionLink("Hypervisor Group Types", "Index", "HypervisorGroupType")</li>
                            <li>@Html.ActionLink("Hypervisor Workload Profiles", "Index", "HypervisorWorkloadProfile")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Virtual Machines", "Index", "VirtualMachine")</li>
                            <li>@Html.ActionLink("Virtual Machine Types", "Index", "VirtualMachineType")</li>
                            <li>@Html.ActionLink("XenApp Server Roles", "Index", "XenAppServerRole")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("XenDesktop Sites", "Index", "XenDesktopSite")</li>
                            <li>@Html.ActionLink("XenDesktop Servers", "Index", "XenDesktopServer")</li>
                            <li>@Html.ActionLink("XenDesktop Catalogs", "Index", "XenDesktopCatalog")</li>
                            <li>@Html.ActionLink("XenDesktop Catalog Types", "Index", "XenDesktopCatalogType")</li>
                            <li>@Html.ActionLink("XenDesktop Brokered Desktops", "Index", "XenDesktopBrokerDesktop")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Data Store Groups", "Index", "DataStoreGroup")</li>
                            <li>@Html.ActionLink("Data Store Categories", "Index", "DataStoreCategory")</li>
                            <li>@Html.ActionLink("Data Stores", "Index", "DataStore")</li>
                            <li>@Html.ActionLink("Virtual Hard Drives", "Index", "VirtualHardDrive")</li>
                            <li>@Html.ActionLink("Storage Dashboard", "Storage", "Inventory")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Inventory Machines", "Index", "InventoryMachine")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Inventory and Capacity Dashboard", "Index", "Inventory")</li>
                            @if (currentUser.Invoicing)
                            {
                                <li>@Html.ActionLink("Invoicing Dashboard", "Index", "Invoicing")</li>
                            }
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" id="classification" role="button" href="#" data-toggle="dropdown">Classification <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Migration Groups", "Index", "MigrationGroup")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Applications", "Index", "Application")</li>
                            <li>@Html.ActionLink("Application Versions", "Index", "ApplicationVersion")</li>
                            @*<li>@Html.ActionLink("Application Groups", "Index", "ApplicationGroup")</li>*@
                            <li>@Html.ActionLink("Application Owners", "Index", "ApplicationOwner")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Binaries", "Index", "Binary")</li>
                            <li>@Html.ActionLink("Clarity Entries", "Index", "ClarityEntry")</li>
                            <li>@Html.ActionLink("Platforms", "Index", "Platform")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Published Application Levels", "Index", "PublishedApplicationLevel")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" id="rationalization" role="button" href="#" data-toggle="dropdown">Rationalization <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Business Solutions", "Index", "BusinessSolution")</li>
                            <li>@Html.ActionLink("Strategic Vendors", "Index", "StrategicVendor")</li>
                            <li>@Html.ActionLink("IQ Documents", "Index", "IqDocument")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Business Actions", "Index", "BusinessAction")</li>
                            <li>@Html.ActionLink("Workflows", "Index", "WorkflowDefinition")</li>
                            <li>@Html.ActionLink("Responsible Parties", "Index", "ResponsibleParty")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" id="Hardware Sheet" role="button" href="#" data-toggle="dropdown">Hardware Sheet<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("XenServer", "XenServer", "Hypervisor")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Migration Estate View", "Index", "EstateView")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <div class="navbar-right navbar-text">
                    Logged in as: @currentUser.DisplayName
                </div>
            </div>
        </div>
    </div>
    @RenderSection("BeforeContainer", required: false)
    <div class="container">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
     <div class="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year Novartis AG</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/spin")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/select2")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(".select2-tagselect").select2({
            tags: true,
            tokenSeparators: [","]
        });
    </script>
</body>
</html>
