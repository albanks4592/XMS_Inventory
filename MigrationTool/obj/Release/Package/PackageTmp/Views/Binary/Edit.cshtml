@model MigrationTool.Models.Binary
@using MigrationTool.ViewModels

@{
    ViewBag.Title = "Edit";
}

@Html.Partial("_Breadcrumb", new Breadcrumb(ViewBag.Title, new BreadcrumbItem { LinkText = "Binaries", ControllerName = "Binary" }))
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Version)
        @Html.EditorFor(model => model.Version)
        @Html.ValidationMessageFor(model => model.Version)
    </div>
    
    <div class="well">
        <div class="form-group">
            @Html.EditorFor(model => model.SccmPackage)
            @Html.ValidationMessageFor(model => model.SccmPackage)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PackageName)
            @Html.EditorFor(model => model.PackageName)
            @Html.ValidationMessageFor(model => model.PackageName)
        </div>
    
        <div class="form-group">
            @Html.EditorFor(model => model.Virtualized)
            @Html.ValidationMessageFor(model => model.Virtualized)
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Details", new { Id = Model.Id }, new { @class = "btn btn-default" })
    if (User.IsInRole(MigrationTool.Roles.Admin))
    {
        <div class="pull-right">
            @Html.ActionLink("Delete", "Delete", new { Id = Model.Id }, new { @class = "btn btn-danger" })
        </div>
    }
}
