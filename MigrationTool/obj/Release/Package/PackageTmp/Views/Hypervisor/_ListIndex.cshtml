@model IEnumerable<MigrationTool.ViewModels.HypervisorListIndexViewModel>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.HypervisorGroup)</th>
        <th>@Html.DisplayNameFor(model => model.HypervisorType)</th>
        <th>@Html.DisplayNameFor(model => model.ActiveVirtualMachineCount)</th>
        <th>@Html.DisplayNameFor(model => model.UsedCapacityPercent)</th>
        <th>@Html.DisplayNameFor(model => model.Notes)</th>
        <th>@Html.DisplayNameFor(model => model.Tags)</th>
    </tr>
    @if (Model != null) {
        foreach (var item in Model.OrderBy(model => model.Name))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item)</td>
                <td>@Html.DisplayFor(modelItem => item.HypervisorGroup)</td>
                <td>@Html.DisplayFor(modelItem => item.HypervisorType)</td>
                <td>@Html.DisplayFor(modelItem => item.ActiveVirtualMachineCount)</td>
                <td>@Html.Partial("_ProgressBar_VmCapacity", item)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>@Html.DisplayFor(modelItem => item.Tags)</td>
            </tr>
        }
    }
</table>
@Html.Partial("_RecordCount", Model == null ? 0 : Model.Count())