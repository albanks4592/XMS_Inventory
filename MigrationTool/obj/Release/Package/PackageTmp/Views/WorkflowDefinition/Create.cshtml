@model MigrationTool.Models.WorkflowDefinition
@using MigrationTool.ViewModels

@{
    ViewBag.Title = "Create";
}

@Html.Partial("_Breadcrumb", new Breadcrumb(ViewBag.Title, new BreadcrumbItem { LinkText = "Workflows", ControllerName = "WorkflowDefinition" }))
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
            
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
            
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    
    <div class="form-group">
        @Html.EditorFor(model => model.DefaultWorkflow)
        @Html.ValidationMessageFor(model => model.DefaultWorkflow)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" });
}