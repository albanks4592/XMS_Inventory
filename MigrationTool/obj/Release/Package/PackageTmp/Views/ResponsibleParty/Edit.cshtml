@model MigrationTool.Models.ResponsibleParty
@using MigrationTool.ViewModels

@{
    ViewBag.Title = "Edit";
}

@Html.Partial("_Breadcrumb", new Breadcrumb(ViewBag.Title, new BreadcrumbItem { LinkText = "Responsible Parties", ControllerName = "ResponsibleParty" }))
<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
        
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Details", new { Id = Model.Id }, new { @class = "btn btn-default" })
    if (User.IsInRole(MigrationTool.Roles.Admin))
    {
        <div class="pull-right">
            @Html.ActionLink("Delete", "Delete", new { Id = Model.Id }, new { @class = "btn btn-danger" })
        </div>
    }
}
