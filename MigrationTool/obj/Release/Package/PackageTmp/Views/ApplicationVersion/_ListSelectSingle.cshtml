@model IEnumerable<MigrationTool.Models.ApplicationVersion>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Application.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

    @foreach (var item in Model.OrderBy(x => x.Name).ThenBy(x => x.Name)) {
        <tr>
            <td>
                <div class="radio">
                    <label>
                        <input type="radio" name="selectedApplicationVersion" id="@item.Id" value="@item.Id" />
                        @Html.DisplayFor(modelItem => item.Application.Name)
                    </label>
                </div>
            </td>
            <td>
                <div class="radio">
                    @Html.DisplayFor(modelItem => item.Name) 
                </div>
            </td>
        </tr>
    }
</table>
@Html.Partial("_RecordCount", Model == null ? 0 : Model.Count())